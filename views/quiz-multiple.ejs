<!DOCTYPE html>
<html lang="ja">
<%- include('partials/head') %>
<body>
    <div class="container mt-5">
        <%- include('partials/header') %>
        <%- include('partials/nav') %>

        <main style="max-width: 90%; margin: 0 auto;">
            <section class="quiz-container" style="max-width: 100%;">
                <h2 class="h4 mb-4">4択クイズ</h2>
                <div id="quiz-content"></div>
                <button class="btn btn-primary" id="quiz-submit">回答する</button>
            </section>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                await initQuiz();
                setupEventListeners();
            } catch (error) {
                console.error('初期化に失敗:', error);
            }
        });
    
        async function initQuiz() {
            try {
                const response = await fetch('/quiz-data.json');
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                quizData = await response.json();
                displayQuizzes();
            } catch (error) {
                console.error('クイズデータの取得に失敗:', error);
            }
        }
    
        function getRandomQuizzes(quizzes, count) {
            return quizzes.sort(() => 0.5 - Math.random()).slice(0, count);
        }
    
        function setupEventListeners() {
            const submitButton = document.getElementById('quiz-submit');
            if (submitButton) {
                submitButton.addEventListener('click', submitAnswers);
            }
        }
    
    </script>
    <script>
        const QUIZ_COUNT = 3; // 表示する問題数を定数で指定
        let quizData = null; // initQuiz()でjsonからクイズデータを読み込む
        let inputAnswers = {}; // 入力された回答を保持するオブジェクト
        let correctAnswers = {}; // 正解を保持するオブジェクト


        // クイズの表示処理
        function displayQuizzes() {
            if (!quizData?.multiple) return;

            const quizzes = getRandomQuizzes(quizData.multiple, QUIZ_COUNT);
            const container = document.getElementById('quiz-content');
            if (!container) return;

            container.innerHTML = ''; // 既存のクイズをクリア

            quizzes.forEach((quiz, index) => {
                const questionElement = document.createElement('p');
                questionElement.id = `quiz-question-${index}`;
                questionElement.className = 'mb-4';
                questionElement.textContent = quiz.question;
                container.appendChild(questionElement);

                const choicesContainer = document.createElement('div');
                choicesContainer.id = `quiz-choices-${index}`;
                choicesContainer.className = 'mb-4';
                container.appendChild(choicesContainer);

                quiz.choices.forEach(choice => {
                    const button = document.createElement('button');
                    button.className = 'btn btn-outline-primary btn-sm me-2';
                    button.textContent = choice;
                    // 選択肢がクリックされたときの処理を追加
                    button.addEventListener('click', () => handleChoiceSelection(index, button, choice));
                    choicesContainer.appendChild(button);
                });
                // 正解を保存
                correctAnswers[index] = quiz.correctAnswer;
            });
        }


        // 選択肢が選ばれた際の処理
        function handleChoiceSelection(quizIndex, button, choice) {
            const buttons = document.querySelectorAll(`#quiz-choices-${quizIndex} button`);
            buttons.forEach(btn => {
                btn.classList.remove('active');
                btn.classList.add('btn-outline-primary');
                btn.classList.remove('btn-primary');
            });
            button.classList.add('active');
            button.classList.remove('btn-outline-primary');
            button.classList.add('btn-primary');
            inputAnswers[quizIndex] = choice;
        }

        function submitAnswers() {
            console.log('回答:', inputAnswers);
            showResultsAlert();
        }

        function showResultsAlert() {
            const totalQuestions = QUIZ_COUNT;

            let correctCount = 0;
            for(let i = 0; i < QUIZ_COUNT; i++) {
            if (inputAnswers[i] === correctAnswers[i]) {
                correctCount++;
            }
            }

            const resultMessage = `
            あなたの回答: ${JSON.stringify(inputAnswers)}
            正解数: ${correctCount} / ${totalQuestions}
            `;

            alert(resultMessage);
        }

    </script>
</body>
</html>